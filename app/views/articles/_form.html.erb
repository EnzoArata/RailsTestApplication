<% if @article.errors.any? %>
  <h2>The following errors prevented the article from being saved</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<div class="container rounded" id="task-container-1">
  <%= form_with(model: @article, local: true ) do |f| %>
    <div class="form-group row">
      <h3> <%= f.label :Owner, class: "col-form-label" %>   &nbsp;&nbsp; </h3>

        <div class="dropdown">


            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Roomate
            </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">Group</a>
                <a class="dropdown-item" href="#">Date</a>
                <a class="dropdown-item" href="#">Importance</a>
              </div>

          </div>

          <div class="dropdown">


              <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Enzo
              </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                  <a class="dropdown-item" href="#">Erik</a>
                  <a class="dropdown-item" href="#">Zach</a>
                  <a class="dropdown-item" href="#">Sohail</a>
                </div>

            </div>



    </div>

    <div class="form-group row">
      <%= f.label :Title, class: "col-2 col-form-label" %><br>
      <div class="col-10">
        <%= f.text_area :title, class: "form-control", placeholder: "Title" %>
      </div>
    </div>

    <div class="form-check text-center">
      <input type="checkbox" class="form-check-input" id="exampleCheck1">
      <label class="form-check-label" for="exampleCheck1">Recurring?</label>
      <div class="dropdown">


          <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Monthly
          </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item" href="#">Weekly</a>

            </div>

        </div>
      </div>

    <div class="form-group row text-center">
      <%= f.label :Start, class: "col-2 col-form-label" %><br>

        <%= f.text_area :description, placeholder: "First of the month" %>

      <%= f.label :End, class: "col-2 col-form-label" %><br>

        <%= f.text_area :description, placeholder: "Last of the month" %>

    </div>

    <p class = "text-center">
      <%= f.submit class: "text-white btn-secondary" %>
    </p>
  <% end %>

</div>
