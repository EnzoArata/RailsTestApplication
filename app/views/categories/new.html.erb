
<div class = "container-fluid text-center" id="page-content">

  <h1><strong>Create a new Category</strong></h1>


  <div class="container rounded" id="task-container-1">
    <br>
    <%= render "shared/errors", obj: @category %>
    <%= form_with(model: @category, local: true ) do |f| %>


      <div class="form-group row">
        <%= f.label :"Category name", class: "col-2 col-form-label" %><br>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter a Category" %>
        </div>
      </div>






      <p class = "text-center">
        <%= f.submit  class: "text-black btn btn-secondary btn-large btn-outline-light" %>
      </p>
    <% end %>
  <br>
  </div>




</div>

<footer id="sticky-footer" class="py-4 bg-dark text-white-50">
